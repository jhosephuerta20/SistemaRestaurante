---
import { Image } from "astro:assets";
import reservation from "@/assets/reservations.webp";
import PruebaSwipper from "@/components/PruebaSwipper.jsx";
import MotivoReserva from "@/components/MotivoReserva.tsx";
import LugarRestaurante from "@/components/LugarRestaurante";
import DayReservation from "@/components/DayReservation.tsx";
import ReservationTime from "@/components/ReservationTime.tsx";
import Mesas from "@/components/Mesas.tsx";
---

<section class="flex">
  <div class="m-3 bg-[#F5DCCE] flex justify-center rounded-2xl">
    <div class="p-11">
      <!-- Title -->
      <div class="flex gap-2 items-center text-4xl pb-10">
        <i class="fa-regular fa-calendar-check" style="color: #c25a14;"></i>
        <h1>Sistema de Reservas Online</h1>
      </div>
      <!-- Formulario -->
      <div class="space-y-5">
        <MotivoReserva/>
        <LugarRestaurante/>
        <DayReservation client:load />
        <ReservationTime client:load />
        <Mesas />
      </div>
      <div class="flex my-5">
        <div class="flex flex-col space-y-4">
          <label for="" class="font-medium text-gray-700"
            >Cantidad de Adultos</label
          >
          <input type="text" class="h-10 rounded-md mr-6 pl-4"/>
        </div>
        <div class="flex flex-col justify-end">
          <label for="" class="font-medium text-gray-700 mb-4"
            >Cantidad de Ni√±os</label
          >
          <input type="text" class="h-10 rounded-md pl-4"/>
        </div>
      </div>
      <button
        class="py-3 w-full bg-blue-500 text-white rounded-xl hover:bg-blue-500 gap-2 my-5"
      >Reservar ahora</button>
    </div>
  </div>

  <div>
    <div>
      <PruebaSwipper/>
    </div>
     
  </div>
</section>
