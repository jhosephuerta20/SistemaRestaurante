---
interface Props {
  title: String;
  type: any;
}

const { title, type }: Props = Astro.props;
---

<div>
  <label class="label flex flex-row">
    <input type={type} placeholder=" " class="input" />
    <span class="labelName">{title}</span>
  </label>
</div>
<style>
  .label {
    border: 2px solid #0508ea;
    border-radius: 10px;
    width: max-content;
    display: grid;
    grid-template-areas: "input";
  }
  .input {
    grid-area: input;
    width: 300px;
    font: inherit;
    border-radius: 10px;
    padding: 0.7rem 1.5rem;
  }
  .labelName {
    font-size: 15px;
    grid-area: input;
    z-index: 100;
    width: max-content;
    margin-left: 1rem;
    padding: 0 0.5rem;
    align-self: center;
    height: 100%;
    display: flex;
    align-items: center;
    transition: transform 0.2s;
    transform-origin: center left;
  }

  .input:focus + .labelName,
  .input:not(:placeholder-shown) + .labelName {
    transform: translateY(-50%) scale(0.7);
    background-color: white;
  }
</style>
